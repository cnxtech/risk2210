  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'twitter-bootstrap-rails'
  gem 'therubyracer'
end

## Frontend / Views
gem 'jquery-rails'
gem 'redcarpet'
