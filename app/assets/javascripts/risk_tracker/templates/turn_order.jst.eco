<div class="modal-wrapper">
  <h3>Enter turn order for year <span class="year"></span></h3>
  <% for game_player in @game_players: %>
    <div>
      <%= game_player.get("handle") %>
    </div>
    <div>
      <input data-game-player-id="<%= game_player.get('id') %>" type="number" min="1" max="<%= @game_players.length %>" />
    </div>
  <% end %>
  <div class="save-button-container">
    <button class='btn btn-large btn-success'>Save Turn Order</button>
  </div>
</div>
