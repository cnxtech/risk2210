<% GamePlayer::COLORS.each do |color| %>
$<%= color.downcase %>: <%= GamePlayer.hex_color(color) %>;
<% end %>

//****************************************************************************************************************************************
//** Mixins
//****************************************************************************************************************************************

@mixin glowingBorder($color) {
  border: 2px solid $color;
  -webkit-box-shadow: 0 0 15px $color;
  -moz-box-shadow: 0 0 15px $color;
  box-shadow: 0 0 15px $color;
}

@mixin rounded($border_radius: 10px) {
    border-radius: $border_radius;
  -moz-border-radius: $border_radius;
  -webkit-border-radius: $border_radius;
}

@mixin container{
  border: 1px solid #000000;
  @include rounded(5px);
  background: rgba(39, 43, 48, 0.9);
}

@mixin counter{
  font-family: "Gunship";
  text-shadow: -3px -3px 0 #000;
  font-size: 50px;
  color: #b51500;
}

//****************************************************************************************************************************************
//** Game Setup
//****************************************************************************************************************************************

#game-players-setup{
  .add-player-button-container{
    margin-top: 15px;
  }
  .nested-fields{
    @include rounded(5px);
    background: #272B30;
    padding: 15px;
    margin-bottom: 20px;
    .control-group{
      margin-bottom: 0;
    }
  }
}

//****************************************************************************************************************************************
//** Layout
//****************************************************************************************************************************************

#game-header{
  margin: 10px 20px;
  h3{
    font-family: "Gunship";
  }
}

#game{
  float: left;
  h3.map-name{
    margin: 0px 25px;
    font-family: "Gunship";
  }
}

.delete-game-container {
  margin-top: 50px;
}

//****************************************************************************************************************************************
//** Maps
//****************************************************************************************************************************************

.map{
  width: 175px;
  margin: 10px 20px;
  float: left;
}

.clear{
  clear: both;
}

ul.continent-list{
  list-style: none;
  margin: 0 0 15px 0;
  padding: 5px;
  min-height: 40px;
  min-width: 100px;
  li{
    margin: 10px 0;
    span.continent{
      cursor: pointer;
      padding: 5px;
      color: #fff;
      @include rounded(5px);
      text-shadow: none;
      opacity: 1.0;
    }
  }
}

//****************************************************************************************************************************************
//** Modals
//****************************************************************************************************************************************

.modal-wrapper{
  padding: 20px;

  input{
    width: 30px;
  }
  .save-button-container{
    margin-top: 25px;
  }
}

//****************************************************************************************************************************************
//** Game Player card
//****************************************************************************************************************************************

.player-card{
  margin: 20px 10px;
  clear: left;
  padding: 10px;
  min-height: 565px;
  width: 500px;
  float: left;
  @include rounded(10px);

  .player-label {
    @include container();
    font-family: "Gunship";
    height: 60px;
    line-height: 60px;
    margin: 5px;
    width: 490px;
    span.name{
      font-size: 20px;
      padding: 5px 15px;
    }
    img.faction-logo{
      cursor: pointer;
      padding: 5px;
      float: left;
    }
    .popover-content{
      line-height: 21px;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
  }

  .row{
    clear: both;
    display: table-row;

    .cellspan-two{
      width: 326px !important;
    }

    .space-station{
      width: 112px;
      height: 70px;
      float: left;
      margin: 5px;
      cursor: pointer;
      @include container();
      img{
        margin: 10px 25px;
      }
    }

    .column{
      width: 155px;
      float: left;
      margin: 5px;

      .avatar{
        padding: 10px;
        @include container();
        img{
          display: block;
        }
      }

      .turn-controls{
        padding: 10px;
        @include container();
        height: 105px;
        h3{
          font-family: "Gunship";
          text-align: center;
          margin-bottom: 5px;
        }
        .territory-counter{
          margin: 10px 10px 0 0;
          float: right;
          // text-align: center;
          @include counter();
          margin-bottom: 5px;
        }
        .buttons{
          float: left;
          margin-left: 10px;
          text-align: left;
          i{
            margin-right: 0;
          }
        }
      }

      .territories{
        @include container();
        cursor: pointer;
        h3{
          text-align: center;
          font-family: "Gunship";
        }
        ul{
          margin: 0 0 0 10px;
        }
      }

      .counter-container{
        height: 100%;
        margin: 15px 0 0 15px;
        font-family: "Gunship";
        h3.counter-label{
          color: #fff;
          font-size: 20px;
          height: 100%;
          clear: right;
        }
        h2.counter{
          @include counter();
          margin: 5px 0 15px;
        }
      }

      .turn-counter-container{
        @include container();
        text-align: center;
        width: 155px;
        margin-left: 0;
        // margin-bottom: 10px;
        h3{
          line-height: 1;
        }
      }

      .save-turn-container{
        clear: both;
        width: 460px;
        a.invade{
          float: left;
        }
        a.save-turn{
          float: right;
        }
      }

    }
  }

  .invade-card{
    .territory-counter{
      float: right;
      @include counter();
      font-size: 50px;
      margin-right: 20px;
    }
    .player-row {
      width: 470px;
      display: block;
      margin: 5px;
      padding: 10px;
      height: 45px;
      @include container();
      @include counter();
      .avatar{
        float: left;
        width: 70px;
        img{
          max-height: 50px;
        }
      }
      .invade-player-button-container{
        float: left;
        .btn{
          width: 290px;
        }
      }
    }

    .end-invasion-button-container{
      margin-top: 40px;
    }

  }

}

.red-glow{
  @include glowingBorder($red);
}
.green-glow{
  @include glowingBorder($green);
}
.blue-glow{
  @include glowingBorder($blue);
}
.black-glow{
  @include glowingBorder($black);
}
.gold-glow{
  @include glowingBorder($gold);
}

<% (1..8).each do |num| %>
.background-<%= num %>{
  background-image: image-url('player_card_backgrounds/background<%= num %>.jpg');
}
<% end %>
