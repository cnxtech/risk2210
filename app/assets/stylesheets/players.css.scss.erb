<% GamePlayer::COLORS.each do |color| %>
$<%= color.downcase %>: <%= GamePlayer.hex_color(color) %>;
<% end %>

#player-profile {
  .well{
    padding-top: 5px;
  }

  h2{
    margin: 0 0 5px 0;
  }
  font-size: 14px;
  .photo-container{
    max-height: 200px;
  }
  .location{
    margin-top: 20px;
  }
  .site{
    margin-top: 10px;
  }
  .bio{
    max-height: 200px;
    float: right;
  }
  .message-link{
    float: right;
    margin-top: 20px;
    a{
      float: right;
    }
  }
}

.nearby-players{
  margin-top: 65px;
  tr{
    height: 35px;
  }
}

.red{
  color: $red;
}

.blue{
  color: $blue;
}

.green{
  color: $green;
}

.black{
  color: $black;
}

.gold{
  color: $gold;
}
