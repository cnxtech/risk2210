<% content_for :page_title, "#{@faction.name} Faction" %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @faction.name %> &ndash; <%= @faction.classification %></h3>
  </div>
  <div class="panel-body">
    <h5>Official Faction:&nbsp;&nbsp;<%= @faction.official?.yes_or_no %></h5>
    <h5>Starting Resources:</h5>
    <ul>
      <% @faction.starting_resources.each do |resource| %>
        <li><%= resource %></li>
      <% end %>
    </ul>
    <p><%= @faction.abilities %></p>
  </div>
</div>

<% content_for :sidebar do %>
  <div class='card'>
    <%= faction_card_image(@faction) %>
  </div>
<% end %>
