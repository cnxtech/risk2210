<% content_for :page_title, "Forgot Password" %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Forgot Password</h3>
  </div>
  <div class="panel-body">
    <p>Enter your email address and instructions will be sent to you.</p>
    <%= simple_form_for :player, url: request_password_reset_path do |f| %>
      <%= f.input :email %>
      <%= f.submit "Reset Password", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
