<div class="messages">
  <%= render partial: "messages/nav" %>

  <%= simple_form_for @message, url: create_message_path, html: {class: 'form-vertical well'} do |f| %>
    <%= error_messages_for @message %>
    <fieldset>
      <%= f.association :recipient, as: :select, collection: Player.all, label_method: :handle, value_method: :id %>
      <%= f.input :subject %>
      <%= f.input :body, as: :text, input_html: {rows: 10, cols: 100} %>
      <div class="form-actions">
        <%= f.submit "Create Message", class: 'btn btn-primary' %>
        <%= link_to 'Cancel', :back, class: 'btn' %>
      </div>
    </fieldset>
  <% end %>
</div>

<% content_for :sidebar do %>
  <p>
    Messages support <a href='http://en.wikipedia.org/wiki/Markdown' target="_blank">Markdown</a> formatting.  Below are some examples of how you can format your messages.
  </p>
  <%= render partial: "shared/markdown_examples" %>
<% end %>
