<% if logged_in? %>
  <% parent_id ||= nil %>
  <%= form_for @comment, :url => create_comment_forum_topic_path(@forum, @topic, :comment_parent_id => parent_id), :html => {:class => "form-stacked"} do |f| %>
    <%#= f.label :body %>
    <%= f.text_area :body, :style => "width: 400px; height: 100px;" %>
    <br />
    <%= button("Submit") %>
  <% end %>
<% else %>
  <%= link_to "Login to comment", login_path %>
<% end %>