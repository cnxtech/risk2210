<% if logged_in? %>
  <% parent_id ||= nil %>
  <%= simple_form_for @comment, :url => create_comment_forum_topic_path(@forum, @topic, :comment_parent_id => parent_id), html: {class: 'form-horizontal'} do |f| %>
    <%= error_messages_for @comment %>
    <%#= f.label :body %>
    <%= f.input :body, as: :text, :style => "width: 400px; height: 100px;" %>
    <br />
    <%= button("Submit") %>
  <% end %>
<% else %>
  <%= link_to "Login to comment", login_path %>
<% end %>