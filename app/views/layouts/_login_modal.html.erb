
<% unless logged_in? %>
<div class="modal fade" id="login-modal" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= simple_form_for :session, url: create_session_path, html: {class: 'form-vertical'} do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Login</h4>
        </div>
        <div class="modal-body">
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :remember_me, as: :boolean, wrapper: :checkbox %>
        </div>
        <div class="modal-footer">
          <%= f.submit "Login", class: 'btn btn-danger' %>
          <%= facebook_button %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>
