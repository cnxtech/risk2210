<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Risk Tracker", root_path, class: "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <%= navigation_item("Players", players_path, :players) %>
          <%= navigation_item("Factions", factions_path, :factions) %>
          <%= navigation_item("Forums", forums_path, :forums) %>
          <li><%= link_to "Tracker", "#" %></li>
          <li><%= link_to "Expansions", "#" %></li>
          <li><%= link_to "Contact Us", "#" %></li>
        </ul>
        <ul class="nav pull-right">
          <% if current_player %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to edit_player_path(current_player) do %>
                  <i class="icon-cog icon-white"></i> Edit Profile
                <% end %>
              </li>
              <li>
                <%= link_to edit_password_path do %>
                  <i class="icon-lock icon-white"></i> Change Password
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: :delete do %>
                  <i class="icon-off icon-white"></i> Logout
                <% end %>
              </li>
            </ul>
          </li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Facebook", facebook_authentication_path %></li>
                <li><%= link_to "RiskTracker", login_path %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>