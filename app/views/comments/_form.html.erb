<div class="comment-form">
  <% if logged_in? %>
    <% parent_id ||= nil %>
    <%= simple_form_for @comment, url: forum_topic_comments_path(@forum, @topic, comment_parent_id: parent_id), html: {class: 'form-vertical'} do |f| %>
      <%= error_messages_for @comment %>
      <%= f.input :body, as: :text, label: false, input_html: {class: 'comment-text'} %>
      <%= f.submit "Comment", class: 'btn btn-primary' %>
      <% if !defined?(hide_cancel) || defined?(hide_cancel) && hide_cancel != true %>
        <%= link_to 'Cancel', players_path, class: 'btn nested_comment_cancel_button' %>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to "Login to comment", login_path %>
  <% end %>
</div>