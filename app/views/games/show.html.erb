<div class="hero-unit">
  <h2><%= @game.map_names %></h2>
  <h2>Turns</h2>
  <ol>
    <% @game.turns.each do |turn| %>
      <li><%= turn.game_player.handle %> &ndash; Units: <%= turn.energy_collected %>, Energy: <%= turn.units_collected %></li>
    <% end %>
  </ol>
  <h2>New Turn</h2>
  <%= simple_form_for :turn, url: game_turns_path(@game) do |f| %>
    <%= f.input :game_player_id, collection: @game.game_players.map{|game_player| [game_player.player.handle, game_player.id]} %>
    <%= f.input :units_collected %>
    <%= f.input :energy_collected %>
    <%= f.submit "Create Turn", class: 'btn btn-primary' %>
  <% end %>
</div>

<% content_for :sidebar do %>
  <% if @game.location.present? %>
    <h3>Location: <%= @game.location %></h3>
  <% end %>
  <h4><%= @game.years %> Year Game</h4>
  <% if @game.notes.present? %>
    <p>Notes: <%= @game.notes %></p>
  <% end %>

  <h2>Players</h2>
  <ul>
    <% @game.game_players.each do |game_player| %>
      <li><%= game_player.player.handle %> &ndash; <%= game_player.faction.name %></li>
    <% end %>
  </ul>

<% end %>