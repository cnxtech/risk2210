<div class="player-card <%= color_class(game_player) %> background-<%= game_player_counter + 1 %>" id='<%= dom_id(game_player) %>'>
  <div class="left-col">
    <div class='avatar'>
      <%= avatar(game_player.player, size: :medium) %>
    </div>
    <div class="turn-controls">
      <h2 class="territory-counter">23</h2>
      <div class='buttons'>
        <%= link_to content_tag(:i, "", class: "icon-minus-sign icon-large"), "#", class: "btn btn-small btn-danger" %>
        <%= link_to content_tag(:i, "", class: "icon-plus-sign icon-large"), "#", class: "btn btn-small btn-success" %>
      </div>
    </div>
    <div class="save-turn">
      <%= link_to content_tag(:i, "", class: "icon-ok") + " Save Turn", "#", class: "btn btn-small btn-success" %>
    </div>
  </div>
  <div class='land territories'>
    <h3>Land</h3>
    <ul></ul>
  </div>
  <div class='water territories'>
    <h3>Water</h3>
    <ul></ul>
  </div>
  <div class='space territories'>
    <h3>Space</h3>
    <ul></ul>
  </div>
  <div class="right-col">
    <div class='faction-logo'><%= faction_icon(game_player.faction) %></div>
    <div class="counter-container">
      <h3 class="counter-label">Energy:</h3>
      <h2 class='counter energy'>19</h2>
      <h3 class="counter-label">Units:</h3>
      <h2 class='counter units'>23</h2>
    </div>
  </div>
</div>