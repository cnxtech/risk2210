<%= form_for @player, html: {class: "form-stacked"} do |f| %>
  <%= error_messages_for @player %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :handle %>
    <%= f.text_field :handle %>
  </p>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %>
    <%= f.select :state, us_states_options, include_blank: true %>
  </p>
  <p>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </p>
  <p>
    <%= f.label :website %>
    <%= f.url_field :website %>
  </p>
  <p>
    <%= f.label :bio %>
    <%= f.text_area :bio, :class => "xxlarge" %>
  </p>
  <p>
    <%= button("Save Profile") %>
  </p>
<% end %>