<% content_for :page_title, "Change Password" %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Change Password</h3>
  </div>
  <div class="panel-body">
    <%= simple_form_for @player, url: update_password_path do |f| %>
      <%= error_messages_for @player %>
      <% if @player.password_digest.present? %>
        <%= f.input :old_password %>
      <% else %>
        <p>You don't have a password because you created your account through Facebook. Add your password here and you will then be able to login without going through Facebook!</p>
      <% end %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.submit "Update Password", class: 'btn btn-primary' %>
      <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
