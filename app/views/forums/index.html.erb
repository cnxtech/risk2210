<h1>Discussion Forums</h1>
<div id="forums">
  <% @forums.each do |forum| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to forum.name, forum_path(forum) %> (<%= pluralize(forum.topics.count, "topic") %>)</h3>
      </div>
      <div class="panel-body">
        <%= forum.description %>
      </div>
    </div>
  <% end %>
</div>
